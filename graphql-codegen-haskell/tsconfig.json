{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["esnext"],
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
